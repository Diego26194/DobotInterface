
[Unit]
Description=Inicialización del robot colaborativo (encendido)
After=roscore.service

[Service]
Type=simple
User=labme
Environment=ROS_DISTRO=noetic
Environment=DISPLAY=:0  # Ajusta si tu entorno gráfico está en otra pantalla
Environment=XAUTHORITY=/home/dobot_labme/.Xauthority  # Asegúrate de que esta ruta sea correcta
ExecStart=/bin/bash -c 'source /opt/ros/noetic/setup.bash; source /home/abme/catkin_ws/devel/setup.bash; exec /opt/ros/noetic/bin/roslaunch niryo_controladores inicializacion_encendido.launch'
Restart=always

[Install]
WantedBy=multi-user.target

